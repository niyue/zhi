      <h2><%= pluralize(@short_answer.errors.count, "error") %> prohibited this short_answer from being saved:</h2>

      <ul>
      <% @short_answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.inputs do %>
