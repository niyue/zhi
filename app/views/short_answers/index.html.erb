<h1>Listing short_answers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_answers.each do |short_answer| %>
      <tr>
        <td><%= short_answer.name %></td>
        <td><%= short_answer.description %></td>
        <td><%= short_answer.answer %></td>
        <td><%= link_to 'Show', short_answer %></td>
        <td><%= link_to 'Edit', edit_short_answer_path(short_answer) %></td>
        <td><%= link_to 'Destroy', short_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Short answer', new_short_answer_path %>
