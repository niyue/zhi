<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-11"><h1>所有的試卷</h1></div><!--
  --><div class="col-md-1 top-padding-buffer"><%= link_to '新的試卷', new_exam_path %></div>
</div>

<table class="table table-striped table-bordered top-buffer">
  <thead>
    <tr>
      <th>名稱</th>
      <th>描述</th>
      <th colspan="8" width="45%">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= link_to exam.name, exam %></td>
        <td><%= exam.description %></td>
        <td><%= link_to '打印', printable_exam_path(exam, { format: :pdf, compact: true }), target: '_blank' %></td>
        <td><%= link_to '答案', printable_exam_path(exam, { answer: true }), target: '_blank' %></td>
        <td><%= link_to '問答題答案', printable_exam_path(exam, { answer: true, essays_only: true }), target: '_blank' %></td>
        <td><%= link_to '選擇題答案', printable_exam_path(exam, { answer: true, multiple_choices_only: true }), target: '_blank' %></td>
        <td><%= link_to '編輯', edit_exam_path(exam) %></td>
        <td><%= link_to '問題集', new_exam_part_path(exam) %></td>
        <td><%= link_to '問題排序', exam_orders_path(exam) %></td>
        <td><%= link_to '刪除', exam, method: :delete, data: { confirm: '一失足成千古恨, 再回頭已百年身. 確定?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '試卷首頁文字', setting_path(:cover), class: 'btn btn-default' %>
