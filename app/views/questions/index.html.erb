<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Exam</th>
      <th>Question</th>
      <th>Question type</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.exam %></td>
        <td><%= question.question_id %></td>
        <td><%= question.question_type %></td>
        <td><%= question.position %></td>
        <td><%= link_to 'Show', exam_question_path(@exam, question) %></td>
        <td><%= link_to 'Edit', edit_exam_question_path(@exam, question) %></td>
        <td><%= link_to 'Destroy', exam_question_path(@exam, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_exam_question_path(@exam) %>
