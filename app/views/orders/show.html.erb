<h2>選擇題</h2>
<table id="multiple-choice-questions" class="table table-striped table-bordered top-buffer">
  <thead>
    <tr>
      <th>序號</th>
      <th>問題</th>
    </tr>
  </thead>

  <tbody>
    <% @multiple_choices.each do |mc| %>
      <tr class="sortable-item" data-exam-id="<%= @exam.id %>" data-question-id="<%= mc.id %>" data-question-type="<%= mc.class.name %>">
        <td><%= link_to mc.id, mc %></td>
        <td><%=raw mc.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>問答題</h2>
<table id="essay-questions" class="table table-striped table-bordered top-buffer">
  <thead>
    <tr>
      <th>名稱</th>
      <th>問題</th>
    </tr>
  </thead>

  <tbody>
    <% @essays.each do |essay| %>
      <tr class="sortable-item" data-exam-id="<%= @exam.id %>" data-question-id="<%= essay.id %>" question-type="<%= essay.class.name %>">
        <td><%= link_to essay.name, essay %></td>
        <td><%=raw essay.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>